{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": ".",
    "headers": [
        {
            "source": "/assets/(.*).css",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600, stale-while-revalidate=86400"
                }
            ]
        },
        {
            "source": "/assets/(.*).js",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600, stale-while-revalidate=86400"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=2592000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/p/:slug",
            "destination": "/api/product_page.js?slug=:slug"
        },
        {
            "source": "/api/auth",
            "destination": "/api/auth.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        }
    ]
}