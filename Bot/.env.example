# ============================================================================
# NONGOR PREMIUM BOT v3.0 - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
#

# ============================================================================
# TELEGRAM CONFIGURATION (REQUIRED)
# ============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin user IDs (comma-separated, no spaces)
# To get your user ID, start the bot and send /start
ADMIN_USER_IDS=5210889575

# ============================================================================
# AI ASSISTANT (OPTIONAL - Gemini)
# ============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# WEBSITE MONITORING (OPTIONAL)
# ============================================================================
# Your website URL to monitor
WEBSITE_URL=https://nongor-brand.vercel.app/

# How often to check the website (in seconds)
# Default: 300 (5 minutes)
MONITOR_INTERVAL_SECONDS=300

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ============================================================================
# PostgreSQL connection string from Netlify
# Format: postgresql://user:password@host:port/database
NETLIFY_DATABASE_URL=your_database_url_here

# ============================================================================
# FEATURE FLAGS (OPTIONAL)
# ============================================================================
# Enable/disable specific features
ENABLE_ORDER_ALERTS=true
ENABLE_WEBSITE_MONITORING=true
ENABLE_AI_ASSISTANT=true
ENABLE_EXPORT_FEATURES=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit the .env file to Git (it's in .gitignore)
# 2. For production, use environment variables in your hosting platform
# 3. Restart the bot after changing these values
# 4. Keep your tokens secret - never share them publicly
